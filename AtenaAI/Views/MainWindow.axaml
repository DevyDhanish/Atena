<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AtenaAI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AtenaAI.Views"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
        x:Class="AtenaAI.Views.MainWindow"
        Title="AtenaAI"
		SystemDecorations="None"
		Background="Transparent"
	    Topmost="True"
		Width="300"
		Height="300"
		Position="0,0">

	<StackPanel
		Name="MainLayout"
		x:DataType="vm:MainViewModel">
		<Border
			Name="Banner">
			<TextBlock
				Name="Banner_Text"
				Margin="10"
				FontSize="24"
				Foreground="Red"
				FontWeight="Bold"
				HorizontalAlignment="Center">
			</TextBlock>
		</Border>
		<Border
			Name="Body">
			<StackPanel
				Name="Body_Layout">
				<Button
					Click="OnPingClick">
					Capture Audio</Button>
				<TextBlock 
					Name="Body_Layout_Heading"
					Text="Running Services"
					Foreground="Green"
					FontSize="18"
					FontWeight="ExtraBold">
				</TextBlock>
				<Border 
					Name="Body_Layout_Container"
					Background="LightBlue"
					Width="300"
					Height="300">
					<ScrollViewer
						Name="Body_Layout_Container_Scr">
						<StackPanel
							Name="Body_Layout_Container_Scr_Content">
						</StackPanel>
					</ScrollViewer>
				</Border>
			</StackPanel>
		</Border>
	</StackPanel>
</Window>
